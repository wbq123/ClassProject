<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_cholo</item> <!-- 导航栏 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item><!--状态栏，最顶部 -->
        <item name="colorAccent">@color/color_cholo</item> <!-- 内部内容控件的主色，比如progressBar -->
    </style>


    <style name="edit_sty" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginLeft">@dimen/margin_nomal</item>
        <item name="android:layout_marginRight">@dimen/margin_nomal</item>
        <item name="android:layout_marginTop">@dimen/margin_nomal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/input_sec</item>
    </style>

    <style name ="prog_self" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>

    </style>

    <style name ="prog_self_pb" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/loading_big</item>


    </style>
</resources>
